<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>orbit.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>orbit.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightDataServlet</servlet-name>
        <servlet-class>orbit.FlightDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightListServlet</servlet-name>
        <servlet-class>orbit.FlightListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AirportCodeServlet</servlet-name>
        <servlet-class>orbit.AirportCodeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerServlet</servlet-name>
        <servlet-class>orbit.ManagerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerRepServlet</servlet-name>
        <servlet-class>orbit.CustomerRepServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>orbit.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightDataServlet</servlet-name>
        <url-pattern>/flightdata</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightListServlet</servlet-name>
        <url-pattern>/flightlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AirportCodeServlet</servlet-name>
        <url-pattern>/airportcode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerServlet</servlet-name>
        <url-pattern>/manager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerRepServlet</servlet-name>
        <url-pattern>/customerrep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
